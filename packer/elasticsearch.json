{
  "variables": {
    "GOOGLE_APPLICATION_CREDENTIALS": "{{env `GOOGLE_APPLICATION_CREDENTIALS`}}",
    "PROJECT_NAME": "{{env `CLOUD_PROJECT`}}",
    "PROJECT_ZONE": "europe-west1-d",
    "GCS_BUCKET": "ackee-images",
    "ES_VERSION": "{{env `ES_VERSION`}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `PROJECT_NAME`}}",
      "source_image_family": "ubuntu-2004-lts",
      "ssh_username": "ubuntu",
      "zone": "{{user `PROJECT_ZONE`}}",
      "image_name": "elasticsearch-7-{{timestamp}}",
      "image_family": "ackee-elasticsearch",
      "preemptible": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "cleanup.sh",
      "destination": "/tmp/cleanup.sh"
    },
    {
      "type": "shell",
      "script": "./install.sh",
      "environment_vars": [
        "ES_VERSION={{user `ES_VERSION`}}"
      ],
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./stackdriver.sh",
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": [ "sudo sh -c 'apt-get clean'" ]
    }
  ],
  "post-processors": [
    {
      "type": "googlecompute-export",
      "paths": [
        "gs://{{user `GCS_BUCKET`}}/ackee-elasticsearch-7-disk-latest.tar.gz",
        "gs://{{user `GCS_BUCKET`}}/ackee-elasticsearch-7-disk-{{timestamp}}.tar.gz"
      ],
      "keep_input_artifact": false,
      "only": ["googlecompute"]
    }
  ]
}
